<Window x:Class="MemoryGameByJohnny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGameByJohnny"
        xmlns:m="clr-namespace:MemoryGameByJohnny.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topbar -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Player:" VerticalAlignment="Center"/>
                <TextBox Width="140" Margin="6,0,0,0"
                         Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Moves:" Margin="12,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding MoveCount}" VerticalAlignment="Center" Margin="6,0,0,0"/>
                <TextBlock Text="Time:" Margin="12,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding GameTime}" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Button Content="High Scores" Margin="0,0,8,0" Click="HighScores_Click"/>
                <Button Content="New Game" Margin="0,0,8,0" Command="{Binding NewGameCommand}" />
                <Button Content="Save" Command="{Binding SaveStatsCommand}" />
            </StackPanel>
        </DockPanel>

        <!-- Cards grid -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Cards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="4" Columns="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.Resources>
                <!-- Basis-stil til kortknapper -->
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="28"/>
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="MinHeight" Value="80"/>
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <!-- Gør matchede kort tydelige -->
                        <DataTrigger Binding="{Binding IsMatched}" Value="True">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.Resources>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type m:Card}">
                    <Button
                        Command="{Binding DataContext.FlipCardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                        <TextBlock Text="{Binding Symbol}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <!-- Skjul symbol når kortet ikke er vendt/matchet -->
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
