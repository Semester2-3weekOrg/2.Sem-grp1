<Page x:Class="TheMovies.View.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies.View"
      mc:Ignorable="d" 
      d:DesignHeight="684" d:DesignWidth="1090"
      Title="MainPageView">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center"
                   Grid.Row="0"
                   Margin="5"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">Home</TextBlock>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Movies}"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,10"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  GridLinesVisibility="None"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  HeadersVisibility="Column"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  Background="White"
                  AlternationCount="1" 
                  AlternatingRowBackground="#FFB1B1B1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto" />
                <DataGridTextColumn Header="Duration" Binding="{Binding Length}" Width="Auto" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre.Name}" Width="Auto" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
