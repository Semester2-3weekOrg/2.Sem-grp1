<Page x:Class="TheMovies.View.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies.View"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPageView">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Center" Grid.Row="0" Grid.Column="0" FontSize="24" FontWeight="ExtraBold" HorizontalAlignment="Center" VerticalAlignment="Center">The<LineBreak/>Movies</TextBlock>
        <TextBlock TextAlignment="Center" Grid.Row="0" Grid.Column="1" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">Menu title Placeholder</TextBlock>

        <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="Add Placeholder"
                    Click="addMovie_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,10,10,5"
                    Grid.Row="0"/>

            <Button Content="Remove Placeholder"
                    Click="removeMovie_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="1"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="2"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="3"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="4"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="5"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="6"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,5"
                    Grid.Row="7"/>

            <Button Content="Placeholder"
                    Click="placeholder_Click"
                    MinWidth="150" MinHeight="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10,5,10,10"
                    Grid.Row="8"/>
        </Grid>

        <DataGrid Grid.Row="1" 
                  Grid.Column="1"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,10"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  GridLinesVisibility="None"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  HeadersVisibility="Column"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  Background="White"
                  AlternationCount="2"
                  MinRowHeight="350">
            <DataGrid.Columns>
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
                <DataGridTextColumn Header="PlaceHolder" Width="*" />
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Page>
