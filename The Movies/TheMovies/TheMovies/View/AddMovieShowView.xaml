<Page x:Class="TheMovies.View.AddMovieShowView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies"
      mc:Ignorable="d" 
      d:DesignHeight="684" d:DesignWidth="1090"
      Title="AddMovieShowView">

    <Grid ShowGridLines="True" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center"
                   Grid.Row="0"
                   Margin="5"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">Add movie show</TextBlock>

        <Grid Grid.Row="1" ShowGridLines="True">

            <StackPanel Margin="0,20,0,20">
                <TextBlock Text="Movie name: " 
                           Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Movies}"
                          HorizontalAlignment="Left"
                          SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                          Width="545" 
                          Margin="0,0,0,5"/>

                <TextBlock Text="Playtime: " 
                           Margin="0,5,0,5"/>
                <TextBox Text="{Binding PlayTime, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Left" 
                         Width="545" 
                         Margin="0,0,0,5"/>

                <TextBlock Text="Play date: " 
                           Margin="0,5,0,5"/>
                <TextBox Text="{Binding PlayDate, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Left" 
                         Width="545" 
                         Margin="0,0,0,5"/>

                <TextBlock Text="Cinema: " 
                           Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Cinemas}" 
                          HorizontalAlignment="Left" 
                          SelectedItem="{Binding SelectedCinema, Mode=TwoWay}" 
                          DisplayMemberPath="Name" 
                          Width="545" 
                          Margin="0,0,0,5"/>

                <TextBlock Text="Cinema hall: " 
                   Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding CinemaHalls}" 
                  HorizontalAlignment="Left" 
                  SelectedItem="{Binding SelectedCinemaHall, Mode=TwoWay}" 
                  DisplayMemberPath="Name" 
                  Width="545" 
                  Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Add"
                        Command="{Binding AddMovieShowCommand}"
                        Width="150" 
                        Height="50"
                        Margin="10"
                        Grid.Column="3"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
