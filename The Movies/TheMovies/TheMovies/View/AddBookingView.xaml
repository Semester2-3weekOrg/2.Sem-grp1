<Page x:Class="TheMovies.View.AddBookingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBookingView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center"
           Grid.Row="0"
           Margin="5"
           FontSize="24"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           VerticalAlignment="Center">Booking</TextBlock>
        <Grid Grid.Row="1" ShowGridLines="True">
            <StackPanel Margin="0,20,0,20">
                <TextBlock Text="Cinema name: " 
                   Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Cinemas}"
                  HorizontalAlignment="Left"
                  SelectedItem="{Binding SelectedCinema, Mode=TwoWay}"
                  Width="545" 
                  Margin="0,0,0,5"/>
                <TextBlock Text="Movie title: " 
                   Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Movies}"
                  HorizontalAlignment="Left"
                  SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                  Width="545" 
                  Margin="0,0,0,5"/>
                <TextBlock Text="Date: " 
                   Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Movies}"
                  HorizontalAlignment="Left"
                  SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                  Width="545" 
                  Margin="0,0,0,5"/>
                <TextBlock Text="Time: " 
                   Margin="0,5,0,5"/>
                <ComboBox ItemsSource="{Binding Movies}"
                  HorizontalAlignment="Left"
                  SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                  Width="545" 
                  Margin="0,0,0,5"/>
                <TextBlock Text="Number of tickets: " 
            Margin="0,5,0,5"/>
                <TextBox Text="{Binding NumberOfTickets, UpdateSourceTrigger=PropertyChanged}"
          HorizontalAlignment="Left" 
          Width="545" 
          Margin="0,0,0,5"/>
                <TextBlock Text="Email: " 
            Margin="0,5,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
          HorizontalAlignment="Left" 
          Width="545" 
          Margin="0,0,0,5"/>
                <TextBlock Text="Phone number: " 
            Margin="0,5,0,5"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
          HorizontalAlignment="Left" 
          Width="545" 
          Margin="0,0,0,5"/>
                <Button Content="Confirm" 
          Command="{Binding AddBookingCommand}"
          Width="150" 
          Height="50"
          Margin="10"
          Grid.Column="3"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
