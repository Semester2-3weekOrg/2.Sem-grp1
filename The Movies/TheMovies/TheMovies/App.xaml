<Application x:Class="TheMovies.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TheMovies" 
             xmlns:vm="clr-namespace:TheMovies.ViewModels"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Page">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="684"/>
            <Setter Property="Width" Value="1090"/>
        </Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="720"/>
            <Setter Property="Width" Value="1280"/>
        </Style>
    </Application.Resources>
</Application>
